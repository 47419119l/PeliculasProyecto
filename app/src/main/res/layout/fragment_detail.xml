<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_detail2"
    tools:context="com.example.shengbin.peliculasproyecto.DetailActivityFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:text="Titulo"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data estrena"
        android:textStyle="bold"
        android:id="@+id/dataEstrena"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/titulo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popularidad"
        android:textStyle="bold"
        android:id="@+id/popularidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dataEstrena" />

    <TextView
        android:layout_width="wrap_content"
        android:text="descripcio"
        android:layout_height="wrap_content"
        android:id="@+id/descripcio"
        android:layout_below="@+id/popularidad"
        android:layout_alignLeft="@+id/popularidad"
        android:layout_alignStart="@+id/popularidad"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster"
        android:layout_below="@+id/descripcio"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
</ScrollView>