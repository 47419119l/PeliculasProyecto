<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_detail2"
    tools:context="com.example.shengbin.peliculasproyecto.DetailActivityFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
    >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_detail2"
            tools:context="com.example.shengbin.peliculasproyecto.DetailActivityFragment"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CFD8DC"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1">

                <ImageView

                    android:id="@+id/poster"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dip"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.34"
                    android:layout_margin="5dip">

                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/titulo"
                        android:textColor="#FFFFFF"
                        android:text="TITUL "
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_margin="5dip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data estrena"
                        android:textColor="#FFFFFF"
                        android:id="@+id/dataEstrena"
                        android:layout_alignBaseline="@+id/descripcio"
                        android:layout_alignBottom="@+id/descripcio"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dip"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popularidad"
                        android:textColor="#FFFFFF"
                        android:id="@+id/popularidad"
                        android:layout_below="@+id/scrollView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"
                        android:layout_margin="5dip"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="descripcio"
                android:layout_height="wrap_content"
                android:id="@+id/descripcio"
                android:layout_below="@+id/linea"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dip"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>