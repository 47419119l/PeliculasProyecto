<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_detail2"
    tools:context="com.example.shengbin.peliculasproyecto.DetailActivityFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true">



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_detail2"
            tools:context="com.example.shengbin.peliculasproyecto.DetailActivityFragment"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titulo"
                android:text="Titulo"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data estrena"
                android:textStyle="bold"
                android:id="@+id/dataEstrena"
                android:layout_alignBottom="@+id/poster"
                android:layout_alignLeft="@+id/titulo"
                android:layout_alignStart="@+id/titulo"
                android:layout_marginBottom="41dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popularidad"
                android:textStyle="bold"
                android:id="@+id/popularidad"
                android:layout_alignBottom="@+id/poster"
                android:layout_alignRight="@+id/dataEstrena"
                android:layout_alignEnd="@+id/dataEstrena" />

            <ImageView

                android:id="@+id/poster"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:text="descripcio"
                android:layout_height="wrap_content"
                android:id="@+id/descripcio"
                android:layout_below="@+id/poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>